# =============================================================================
# Database
# =============================================================================

DATABASE_URL=postgresql://clubmanager:clubmanager@localhost:35432/clubmanager

# =============================================================================
# Redis
# =============================================================================

REDIS_URL=redis://localhost:36379

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================

MINIO_ENDPOINT=localhost:35900
MINIO_ACCESS_KEY=clubmanager
MINIO_SECRET_KEY=clubmanager

# =============================================================================
# Authentication (Better Auth)
# =============================================================================

# Better Auth secret (generate with: openssl rand -base64 32)
# REQUIRED for production - used to sign session cookies
BETTER_AUTH_SECRET=

# =============================================================================
# OAuth Providers (Optional)
# =============================================================================

# Google OAuth (https://console.cloud.google.com/apis/credentials)
# Set GOOGLE_OAUTH_ENABLED=true to enable
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth (https://portal.azure.com)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# Email / SMTP (Optional - uses Mailhog in dev)
# =============================================================================

SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=noreply@clubmanager.local

# =============================================================================
# AI (Document Recognition)
# =============================================================================

OPENAI_API_KEY=

# =============================================================================
# App
# =============================================================================

WEB_PORT=3000
API_PORT=3001
NEXT_PUBLIC_APP_URL=http://localhost:${WEB_PORT}
API_URL=http://localhost:${API_PORT}

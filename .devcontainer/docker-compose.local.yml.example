# Local DevContainer customizations (NOT committed to git)
# Copy to docker-compose.local.yml and fill in your values

services:
  dev:
    environment:
      # GitHub CLI authentication (Fine-grained PAT with Issues read/write)
      # Generate at: https://github.com/settings/personal-access-tokens/new
      # Repository: kbudisantoso/ktb.clubmanager
      # Permissions: Issues (read/write)
      - GH_TOKEN=ghp_your_token_here
    volumes:
      # Mount Claude config from host for persistent login
      - ~/.claude:/home/node/.claude:cached
